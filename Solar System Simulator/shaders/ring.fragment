#version 330 core
out vec4 FragColor;

in vec2 TexCoords;

uniform sampler2D textureSampler;
uniform vec3 color;
uniform bool useTexture;

void main() {
    if (useTexture) {
        FragColor = texture(textureSampler, TexCoords);
        FragColor.rgb *= 1.2; // Makes rings 20% brighter
    } else {
        FragColor = vec4(color, 1.0);
    }
}